{
  "name": "naturego-lk-monorepo",
  "version": "1.0.0",
  "description": "NatureGo.lk - Sri Lanka's Premier Eco-Tourism Platform",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run frontend:dev\" \"npm run backend:dev\"",
    "build": "npm run frontend:build && npm run backend:build",
    "build:pages": "npm run frontend:build",
    "start": "concurrently \"npm run frontend:start\" \"npm run backend:start\"",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "frontend:start": "cd frontend && npm run preview",
    "frontend:install": "cd frontend && npm install",
    "backend:dev": "cd backend && npm run dev",
    "backend:build": "cd backend && npm run build",
    "backend:start": "cd backend && npm run start",
    "backend:install": "cd backend && npm install",
    "install:all": "npm run frontend:install && npm run backend:install",
    "clean": "rm -rf frontend/node_modules backend/node_modules frontend/dist backend/dist",
    "clean:win": "rmdir /s /q frontend\\node_modules backend\\node_modules frontend\\dist backend\\dist",
    "lint": "cd frontend && npm run lint",
    "test": "cd backend && npm run test",
    "deploy:pages": "npm run build:pages",
    "deploy:backend": "cd backend && npm run deploy",
    "health:backend": "curl -f http://localhost:5000/api/health || echo 'Backend not running'",
    "setup": "npm install && npm run install:all"
  },
  "keywords": [
    "eco-tourism",
    "sri-lanka",
    "nature",
    "travel",
    "sustainability",
    "react",
    "nodejs",
    "mongodb"
  ],
  "author": "Sanjeev",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sanjeev200009/NatureGo.lk.git"
  },
  "homepage": "https://sanjeev200009.github.io/NatureGo.lk/",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}